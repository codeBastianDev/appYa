<form action="guardar_comercio" method="post" enctype="multipart/form-data">

    <input type="hidden" name="id" value="{{profile.id}}">

  <div class="col-md-12 mb-4">
    {{#if profile.photo}}
        <img src="{{profile.photo}}" alt="Profile Photo" class="rounded mx-auto d-block" width="200" alt="...">
    {{else}}
        <img src="https://placehold.co/400" alt="Placeholder" class="rounded mx-auto d-block" width="200" alt="...">
    {{/if}}
  </div>

  <div class="row g-2 mb-4">
    <div class="col-md">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          name="nombre"
          id="floatingInputGrid"
          required
          placeholder="Nombre"
          value="{{profile.name}}"
        />
        <label for="floatingInputGrid">Nombre</label>
      </div>
    </div>
    <div class="col-md">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          name="telefono"
          placeholder="telefono"
          id="telefono"
          value="{{profile.phone}}"
        />
        <label for="telefono">Telefono</label>
      </div>
    </div>
    <div class="col-md-12 mt-4">
      <div class="input-group has-validation">
        <span class="input-group-text">@</span>
        <div class="form-floating">
          <input
            type="email"
            name="correo"
            required
            class="form-control"
            value="{{profile.mail}}"
            id="floatingInputGroup2"
            placeholder="Correo"
            required
          />
          <label for="floatingInputGroup2">Correo</label>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-2 mb-4">
    <div class="col-md">
      <div class="form-floating">
        <input
          type="file"
          class="form-control"
          id="floatingInputGrid"
          placeholder="Nombre"
          name="photo"
          value="{{profile.name}}"
        />
        <label for="floatingInputGrid">Foto</label>
      </div>
    </div>
    <div class="col-md">
      <div class="form-floating">
        <select class="form-select" id="floatingSelectGrid" name="tipo" required>
          <option selected>Seleccione el comercio</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
        <label for="floatingSelectGrid">Tipo de comercio</label>
      </div>
    </div>
  </div>

    <div class="row g-2 mb-4">
    <div class="col-md">
      <div class="form-floating">
        <input
          type="time"
          class="form-control"
          name="open"
          id="open"
          required
          placeholder="Nombre"
          value="{{profile.openTime}}"
        />
        <label for="open">Apertura</label>
      </div>
    </div>
    <div class="col-md">
     <div class="form-floating">
        <input
          type="time"
          class="form-control"
          name="close"
          id="close"
          required
          placeholder="Nombre"
          value="{{profile.closeTime}}"
        />
        <label for="close">Cierre</label>
      </div>
    </div>
  </div>  

    <div class="mb-4">
        <div class="form-floating mb-3">
            <input type="password" name="contrasena" class="form-control" id="contrasena" value="{{profile.password}}" placeholder="Contraseña">
            <label for="contrasena">Contraseña</label>
        </div>
    </div>

  <div>
    <button class="btn btn-success w-100"><i
        class="fa-solid fa-floppy-disk"
      ></i></button>
  </div>
</form>