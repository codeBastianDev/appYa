<div class="mb-3" >
  <div class="text-center"> <h3>{{dato.comercio}}</h3></div>
  <div class="text-center">
    <strong>{{dato.estado}}</strong>
    <br />
    <p class="card-text"><small
        class="text-body-secondary"
      >{{dato.fecha}}</small></p>
    <hr />
  </div>
  <div>
    <div class="mb-2"><strong>Tus pedidos</strong> </div>
    {{#each order}}
      <div class="border border-2 rounded-3 p-4 mb-3">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <img
              src="/{{fotoProducto}}"
              class="p-2 border border-2 rounded-2"
              width="75"
              alt=""
            />
            {{producto}}
          </div>
          <div>
            RD$
            <span class="precio">{{precio}}</span>
          </div>
        </div>
      </div>
    {{/each}}
    <hr />
    <div class="d-flex justify-content-between aling-iteams-center">
      <div class="p-3"><strong>Totol</strong></div>
      <div class="p-3" id="total">RD$</div>
    </div>
    
  </div>
</div>

<a href="/order" class="btn btn-primary w-100">Retrocer</a>

<script>
  var total = 0; document.querySelectorAll('.precio').forEach( e => { total +=
  parseInt(e.textContent) }) 
  document.getElementById('total').textContent = `RD$ ${total}`
</script>