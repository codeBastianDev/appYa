<div class="container">
    <h1>Mis Direcciones</h1>

    <div class="mb-4">
        <button type="button" class="btn btn-primary" onclick="window.location.href='/address/create'">Crear Dirección</button>
    </div>

    {{#each addresses}}
    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title">{{this.street}}</h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
                <div class="mx-3">
                    <button type="button" class="btn btn-warning " onclick="window.location.href='/address/edit/{{this.id}}'"><i class="fa-solid fa-pen"></i></button>
                    <form action="/address/delete/{{this.id}}" method="post" class="d-inline" onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta dirección?');">
                        <button type="submit" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></button>
                </form>
                </div>
            </div>
            
        </div>
    </div>
    {{/each}}
</div>

