{{#if isAuthenticated}}
    {{#ifEquals userType "commerce"}}
        <h1>Welcome to PedidosYa commerce</h1>
            
        <div>
            {{#each order}}
                <a href="/orderDetalleCliente/{{this.id}}" style="text-decoration: none;">
                    <div class="card mb-4">
                            <div class="d-flex align-items-center gap-3 rounded-3 p-3">
                                <div> <img src="/{{this.foto}}" alt="" width="50"> </div>
                                <div>
                                    <div><strong>{{this.estado}}</strong>  <span class="card-text"><small class="text-body-secondary"> • {{this.fecha}}</small><span/></div>
                                    <div>Domino</div>
                                    <div><span class="card-text"><small class="text-body-secondary">RD${{this.total}} • <strong>{{this.pedidos}}</strong> productos</small><span/></div>
                                </div>
                            </div>
                    </div>
                </a>
            {{/each}}
        </div>
    {{/ifEquals}}
    {{#ifEquals userType "customer"}}
        <h1>Welcome to PedidosYa customer</h1>
        <h1 class="mb-4">Types of Commerce</h1>
        <div class="row">
            {{#each typeCommerces}}
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="{{this.photo}}" alt="{{this.name}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <a href="/listcommerce/{{this.id}}" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/ifEquals}}
    {{#ifEquals userType "admin"}}
      <h1>Welcome to PedidosYa admin</h1>
    {{/ifEquals}}

{{else}}
    <h1>You must log in</h1>
{{/if}}
