{{#if isAuthenticated}}
    {{#ifEquals userType "commerce"}}

     <div class="container text-center my-5">
            <h1 class="display-4">Welcome to PedidosYa commerce</h1>
    </div>
            
        <div>
            {{#each order}}
                <a href="/orderDetalleCliente/{{this.id}}" style="text-decoration: none;">
                    <div class="card mb-4">
                            <div class="d-flex align-items-center gap-3 rounded-3 p-3">
                                <div> <img src="/{{this.foto}}" alt="" width="50"> </div>
                                <div>
                                    <div><strong>{{this.estado}}</strong>  <span class="card-text"><small class="text-body-secondary"> • {{this.fecha}}</small><span/></div>
                                    <div>Domino</div>
                                    <div><span class="card-text"><small class="text-body-secondary">RD${{this.total}} • <strong>{{this.pedidos}}</strong> productos</small><span/></div>
                                </div>
                            </div>
                    </div>
                </a>
            {{/each}}

   
    {{/ifEquals}}
    {{#ifEquals userType "customer"}}
        <div class="container my-5">
            <h1 class="display-4 mb-4">Welcome to PedidosYa customer</h1>
            <h2 class="mb-4">Types of Commerce</h2>
            <div class="row">
                {{#each typeCommerces}}
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <img src="{{this.photo}}" class="card-img-top" alt="{{this.name}}">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{this.name}}</h5>
                                <a href="/listcommerce/{{this.id}}" class="btn btn-primary mt-auto">View Details</a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/ifEquals}}
    {{#ifEquals userType "admin"}}
        <div class="container my-5">
            <h1 class="display-4 mb-4">Welcome to PedidosYa admin</h1>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-center" style="background-color: #f8d7da;">
                        <div class="card-body">
                            <h5 class="card-title">Total Orders</h5>
                            <p class="card-text">{{totalOrders}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-center" style="background-color: #f8d7da;">
                        <div class="card-body">
                            <h5 class="card-title">Orders Today</h5>
                            <p class="card-text">{{todayOrders}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-center" style="background-color: #f8d7da;">
                        <div class="card-body">
                            <h5 class="card-title">Active Commerces</h5>
                            <p class="card-text">{{activeCommerces}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-center" style="background-color: #f8d7da;">
                        <div class="card-body">
                            <h5 class="card-title">Inactive Commerces</h5>
                            <p class="card-text">{{inactiveCommerces}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-center" style="background-color: #f8d7da;">
                        <div class="card-body">
                            <h5 class="card-title">Active Customers</h5>
                            <p class="card-text">{{activeCustomers}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-center" style="background-color: #f8d7da;">
                        <div class="card-body">
                            <h5 class="card-title">Inactive Customers</h5>
                            <p class="card-text">{{inactiveCustomers}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-center" style="background-color: #f8d7da;">
                        <div class="card-body">
                            <h5 class="card-title">Active Deliveries</h5>
                            <p class="card-text">{{activeDeliveries}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-center" style="background-color: #f8d7da;">
                        <div class="card-body">
                            <h5 class="card-title">Inactive Deliveries</h5>
                            <p class="card-text">{{inactiveDeliveries}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-center" style="background-color: #f8d7da;">
                        <div class="card-body">
                            <h5 class="card-title">Total Products</h5>
                            <p class="card-text">{{totalProducts}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/ifEquals}}
    {{#ifEquals userType "delivery"}}
        <h1>Home Del delivery</h1>
    {{/ifEquals}}
{{else}}
    <div class="container text-center my-5">
        <h1 class="display-4">You must log in</h1>
    </div>
{{/if}}
